# Application Configuration
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_here_change_in_production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sailor_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sailor_db

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_DEFAULT_COLLECTION=sailor_documents
# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-70b-8192

# Embedding Models Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIM=384
SPARSE_EMBEDDING_MODEL=prithvida/Splade_PP_en_v1

# Embedding Services (HTTP endpoints for microservices)
DENSE_EMBEDDING_URL=http://localhost:8001
SPARSE_EMBEDDING_URL=http://localhost:8002
EMBEDDING_REQUEST_BATCH_SIZE=32  # Reduced for sparse embeddings (memory-intensive)
EMBEDDING_MAX_RETRIES=3  # Number of retry attempts for failed embedding requests
EMBEDDING_RETRY_DELAY=1.0  # Initial delay between retries (exponential backoff)

# Document Processing Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
EMBEDDING_BATCH_SIZE=32  # Internal model batch size

# File Storage Configuration
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./storage/documents
